extends layout

block content
  div(ng-controller='uploadPageCtrl')
    div(class='page-title-wrapper')
      span(class='page-title') 批量任务
      button(class='btn btn-sm btn-outline-info',style='float:right;margin: -5px 0px',ngf-select="uploadFiles($files)" multiple="multiple") 上传文件
    div(class='file-list')
      table(class='table')
        tr
          th 文件名称
          th 文件大小
          th 上传时间
          th 任务总数
          th 状态
          th 操作

        tr(ng-repeat='file in files')
          td {{file.name}}
          td {{file.size}}
          td {{file.time|date:'yyyy-MM-dd HH:MM:ss'}}
          td {{file.total||'-'}}
          td {{file.status}}
          td
            a(class='details-btn',href='/details/?key={{file.sha1}}') 详情
            a(class='delete-btn',href='') 删除




